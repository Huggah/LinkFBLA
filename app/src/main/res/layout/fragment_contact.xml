<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Contact Us"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/contact_message"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/contact_subject"
        android:layout_marginHorizontal="32dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:hint="Message"
        android:textSize="12dp" />

    <Button
        android:id="@+id/contact_send"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/contact_message"
        android:layout_marginHorizontal="32dp"
        app:cornerRadius="0dp"
        android:text="Send"
        android:textStyle="bold"
        android:textColor="#ffffff"
        app:backgroundTint="@color/colorAccent"
        android:background="@color/colorAccent"
        style="?android:attr/borderlessButtonStyle" />

    <EditText
        android:id="@+id/contact_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_title"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="32dp"
        android:ems="10"
        android:hint="Subject"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/contact_logo"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="32dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/bug_report_info"
        app:srcCompat="@drawable/ic_linkfbla" />

    <TextView
        android:id="@+id/bug_report_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_below="@id/contact_send"
        android:textColor="#000000"
        android:textSize="12dp"
        android:layout_marginTop="16dp"
        android:text="@string/bug_reporting_info" />

</RelativeLayout>